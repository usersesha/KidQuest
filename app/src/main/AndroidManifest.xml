<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kidquest">
<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".activities.Start"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.Introduce"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.Login"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ChoiceQuest"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.QuestStartPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.SuccessPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.Test"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ChooseImg"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.InsertAnswer"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.Quest_End"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.User_Profile"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            android:screenOrientation="portrait"/>
    </application>

</manifest>