<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageToRec"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loaderChoice"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/loadergif"
        app:layout_constraintBottom_toBottomOf="@+id/imageToRec"
        app:layout_constraintEnd_toEndOf="@+id/imageToRec"
        app:layout_constraintStart_toStartOf="@+id/imageToRec"
        app:layout_constraintTop_toTopOf="@+id/imageToRec" />

</androidx.constraintlayout.widget.ConstraintLayout>